rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Bloqueia o acesso a todos os documentos por padrao
    match /{document=**} {
      allow read, write: if false;
    }

    // Permite acesso de leitura e escrita a usuarios autenticados
    // nas colecoes ingredientes, embalagens e receitas.
    match /ingredientes/{ingredientId} {
      allow read, write: if request.auth != null;
    }

    match /embalagens/{packagingId} {
      allow read, write: if request.auth != null;
    }

    match /receitas/{recipeId} {
      allow read, write: if request.auth != null;
    }
  }
}
